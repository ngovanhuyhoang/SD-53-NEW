@model QuanApi.Data.MauSac

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>Mã màu sắc</th>
            <td>@Model.MaMauSac</td>
        </tr>
        <tr>
            <th>Tên màu sắc</th>
            <td>@Model.TenMauSac</td>
        </tr>
        <tr>
            <th>Ngày tạo</th>
            <td>@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
        </tr>
        <tr>
            <th>Người tạo</th>
            <td>@(string.IsNullOrEmpty(Model.NguoiTao) || Model.NguoiTao == "unknown" ? "Không rõ" : Model.NguoiTao)</td>
        </tr>
        <tr>
            <th>Lần cập nhật cuối</th>
            <td>@(Model.LanCapNhatCuoi?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")</td>
        </tr>
        <tr>
            <th>Người cập nhật</th>
            <td>@(string.IsNullOrEmpty(Model.NguoiCapNhat) || Model.NguoiCapNhat == "unknown" ? "Không rõ" : Model.NguoiCapNhat)</td>
        </tr>
        <tr>
            <th>Trạng thái</th>
            <td>
                @if (Model.TrangThai)
                {
                    <span class="status-badge status-active">Kích hoạt</span>
                }
                else
                {
                    <span class="status-badge status-inactive">Ẩn</span>
                }
            </td>
        </tr>
    </table>
</div> 