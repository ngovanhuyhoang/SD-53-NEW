@model QuanApi.Dtos.NhanVienResponseDto

@{
    ViewData["Title"] = "Chi tiết Nhân viên";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 800px;
        margin-top: 25px;
    }

    .card {
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        color: white;
        font-weight: bold;
        padding: 1.25rem 1.75rem;
        border-bottom: none;
    }

        .card-header h2 {
            color: white !important;
        }

    .detail-item {
        padding: 0.75rem 0;
        border-bottom: 1px dashed #e9ecef;
    }

        .detail-item:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 600;
        color: #495057;
    }

    .detail-value {
        color: #343a40;
    }

    .btn-action {
        border-radius: 0.6rem;
        padding: 0.75rem 1.5rem;
        transition: all 0.2s ease-in-out;
    }

        .btn-action:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

    .badge {
        font-size: 0.9em;
        padding: 0.5em 0.8em;
        border-radius: 0.5rem;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0"><i class="bi bi-person-lines-fill me-3"></i>Chi tiết Nhân viên</h2>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-item">
                        <div class="detail-label">Mã nhân viên</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.MaNhanVien)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Tên nhân viên</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.TenNhanVien)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Email</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Số điện thoại</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.SoDienThoai)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Ngày sinh</div>
                        <div class="detail-value">@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "N/A")</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Giới tính</div>
                        <div class="detail-value">@(Model.GioiTinh.HasValue ? (Model.GioiTinh.Value ? "Nam" : "Nữ") : "N/A")</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-item">
                        <div class="detail-label">Quê quán</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.QueQuan)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">CCCD</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.CCCD)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Vai trò</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.TenVaiTro)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Trạng thái</div>
                        <div class="detail-value">
                            <span class="badge @(Model.TrangThai ? "bg-success" : "bg-danger")">
                                @(Model.TrangThai ? "Hoạt động" : "Không hoạt động")
                            </span>
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Ngày tạo</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.NgayTao)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">ID Người tạo</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.IDNguoiTao)</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Lần cập nhật cuối</div>
                        <div class="detail-value">
                            @(Model.LanCapNhatCuoi.HasValue ? Model.LanCapNhatCuoi.Value.ToString("dd/MM/yyyy HH:mm:ss") : "N/A")
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">ID Người cập nhật</div>
                        <div class="detail-value">
                            @(Model.IDNguoiCapNhat.HasValue ? Model.IDNguoiCapNhat.Value.ToString() : "N/A")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-end p-4">
            <a asp-action="Edit" asp-route-id="@Model.IDNhanVien" class="btn btn-warning btn-action me-2"><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-secondary btn-action"><i class="bi bi-arrow-left-circle me-2"></i>Quay lại danh sách</a>
        </div>
    </div>
</div>
