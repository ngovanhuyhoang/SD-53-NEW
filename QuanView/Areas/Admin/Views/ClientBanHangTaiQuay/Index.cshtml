            return;
        }

        // Nếu không có số lượng, hiển thị modal để nhập số lượng
        if (quantity === null) {
            showQuantityModal(productId);
            return;
        }

        // Kiểm tra tồn kho trước khi thêm
        const productInfo = products.find(p => p.id === productId);
        if (!productInfo) {
            showError('Không tìm thấy thông tin sản phẩm!');
            return;
        }

        if (quantity > productInfo.stock) {
            showError(`Số lượng vượt quá tồn kho. Hiện có: ${productInfo.stock}`);
            return;
        }

        if (quantity <= 0) {
            showError('Số lượng phải lớn hơn 0!');
            return;
        }

        const gh = gioHangs[currentGioHang];
        const dto = {
            idGioHang: gh.id,
            idSanPhamChiTiet: productId,
            soLuong: quantity,
            nguoiCapNhat: "Admin"
        };

        $.ajax({
            url: '/Admin/ClientBanHangTaiQuay/them-vao-gio-hang',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(dto),
            success: function(res) {
