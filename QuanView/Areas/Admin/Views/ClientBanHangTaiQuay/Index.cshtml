    function adjustQuantity(delta) {
        const input = document.getElementById('quantityInput');
        const currentValue = parseInt(input.value) || 1;
        const maxValue = parseInt(input.max) || 1;
        const newValue = Math.max(1, Math.min(maxValue, currentValue + delta));
        
        input.value = newValue;
        validateQuantityInput();
    }

    // Kiểm tra tính hợp lệ của số lượng nhập vào
    function validateQuantityInput() {
        const input = document.getElementById('quantityInput');
        const value = parseInt(input.value);
        const maxValue = parseInt(input.max) || 1;
        
        // Xóa các ký tự không phải số
        input.value = input.value.replace(/[^0-9]/g, '');
        
        if (isNaN(value) || value < 1) {
            input.value = 1;
        } else if (value > maxValue) {
            input.value = maxValue;
            showWarning(`Số lượng tối đa là ${maxValue}`);
        }
        
        // Cập nhật trạng thái nút xác nhận
        const confirmBtn = document.querySelector('#quantityModal .btn-success');
        const isValid = !isNaN(parseInt(input.value)) && parseInt(input.value) >= 1 && parseInt(input.value) <= maxValue;
        confirmBtn.disabled = !isValid;
    }

