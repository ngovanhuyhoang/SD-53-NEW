        let pay = $('#payAmount').text();
        $('#modalPayAmount').text(pay);
        $('#modalCustomerPaid').val(pay.replace(/\D/g, ''));
        // ƒê·∫∑t l·∫°i ph∆∞∆°ng th·ª©c thanh to√°n trong modal theo ngo√†i giao di·ªán
        let currentMethod = $('#selectedPaymentMethod').text().trim();
        $('#paymentMethod').val(
