@model List<QuanApi.Data.PhieuGiamGia>

@{
    ViewData["Title"] = "Danh sách phiếu giảm giá";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo phiếu mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Mã Code</th>
            <th>Tên phiếu</th>
            <th>Phần trăm giảm</th>
            <th>Giảm tối đa (VNĐ)</th>
            <th>Đơn tối thiểu (VNĐ)</th>
            <th>Số lượng</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Loại</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="11" class="text-center">Không có phiếu giảm giá nào.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaCode</td>
                    <td>@item.TenPhieu</td>
                    <td>@($"{item.GiaTriGiam:F1}%")</td>
                    <td>@(item.GiaTriGiamToiDa?.ToString("n0") ?? "-")</td>
                    <td>@(item.DonToiThieu?.ToString("n0") ?? "-")</td>
                    <td>@item.SoLuong</td>
                    <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                    <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.LaCongKhai)
                        {
                            <span class="badge badge-success">Công khai</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">Riêng tư</span>
                        }
                    </td>
                    <td>
                        @if (item.TrangThai)
                        {
                            <span class="badge badge-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Ngừng</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.IDPhieuGiamGia" class="btn btn-sm btn-info" title="Chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.IDPhieuGiamGia" class="btn btn-sm btn-warning" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IDPhieuGiamGia" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Chú thích</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Loại phiếu giảm giá:</strong></p>
                        <ul>
                            <li><span class="badge badge-success">Công khai</span> - Áp dụng cho tất cả khách hàng</li>
                            <li><span class="badge badge-warning">Riêng tư</span> - Chỉ áp dụng cho khách hàng cụ thể</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Trạng thái:</strong></p>
                        <ul>
                            <li><span class="badge badge-success">Hoạt động</span> - Phiếu có thể sử dụng</li>
                            <li><span class="badge badge-secondary">Ngừng</span> - Phiếu tạm thời không sử dụng</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
