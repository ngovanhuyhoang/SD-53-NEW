@model QuanApi.Data.ThuongHieu

<form id="createForm" novalidate>
    <div class="mb-3">
        <label asp-for="MaThuongHieu" class="form-label">Mã thương hiệu</label>
        <div class="input-group">
            <input asp-for="MaThuongHieu" class="form-control" readonly required />
            <button type="button" class="btn btn-outline-secondary" onclick="generateMaThuongHieu()">
                <i class="fas fa-sync-alt"></i> Tạo mã
            </button>
        </div>
        <small class="form-text text-muted">Mã thương hiệu sẽ được tự động tạo</small>
        <span asp-validation-for="MaThuongHieu" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TenThuongHieu" class="form-label">Tên thương hiệu</label>
        <input asp-for="TenThuongHieu" class="form-control" required />
        <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" asp-for="TrangThai" class="form-check-input" checked />
        <label asp-for="TrangThai" class="form-check-label">Kích hoạt</label>
    </div>
</form>

<script>
    // Auto-generate MaThuongHieu when page loads
    document.addEventListener('DOMContentLoaded', function() {
        generateMaThuongHieu();
    });
    
    // Generate MaThuongHieu function
    function generateMaThuongHieu() {
        const now = new Date();
        const year = now.getFullYear().toString().substr(-2);
        const month = (now.getMonth() + 1).toString().padStart(2, '0');
        const day = now.getDate().toString().padStart(2, '0');
        const hour = now.getHours().toString().padStart(2, '0');
        const minute = now.getMinutes().toString().padStart(2, '0');
        const second = now.getSeconds().toString().padStart(2, '0');
        const random = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
        
        const maThuongHieu = `TH${year}${month}${day}${hour}${minute}${second}${random}`;
        document.querySelector('input[name="MaThuongHieu"]').value = maThuongHieu;
    }
</script>