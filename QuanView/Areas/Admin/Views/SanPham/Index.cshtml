<!-- Modal thêm ảnh -->
<div class="modal fade" id="addImageModal" tabindex="-1" aria-labelledby="addImageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addImageModalLabel">Thêm ảnh sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addImageForm" enctype="multipart/form-data">
                    <input type="hidden" id="sanPhamChiTietId" />
                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Chọn ảnh từ máy</label>
                        <input type="file" class="form-control" id="imageFile" accept="image/*" required onchange="previewImageFile()">
                        <div id="imagePreview" class="image-upload-preview" style="display:none;">
                            <img id="previewImg" src="" alt="Preview" style="max-width:100px;max-height:100px;">
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isMainImage">
                        <label class="form-check-label" for="isMainImage">Đặt làm ảnh chính</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="addImage()">Thêm ảnh</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tự động submit form khi thay đổi trang thái
        document.getElementById('trangThai')?.addEventListener('change', function () {
            this.form.submit();
        });
        // Hiển thị modal thêm ảnh
        function showAddImageModal(sanPhamChiTietId) {
            document.getElementById('sanPhamChiTietId').value = sanPhamChiTietId;
            document.getElementById('imageFile').value = ''; // Clear file input
            document.getElementById('isMainImage').checked = false;
            document.getElementById('imagePreview').style.display = 'none';
            const modalElement = document.getElementById('addImageModal');
            if (modalElement) {
                // Bootstrap 4
                $(modalElement).modal('show');
            }
        }

        // Preview ảnh khi chọn file
        function previewImageFile() {
            const fileInput = document.getElementById('imageFile');
            const previewDiv = document.getElementById('imagePreview');
            const previewImg = document.getElementById('previewImg');

            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    previewImg.src = e.target.result;
                    previewDiv.style.display = 'block';
               
                };

                reader.readAsDataURL(fileInput.files[0]);
                
            } else {
                previewDiv.style.display = 'none';
            }
        }
        // Thêm ảnh mới
        function addImage() {
            const sanPhamChiTietId = document.getElementById('sanPhamChiTietId').value;
            const fileInput = document.getElementById('imageFile');
            const isMainImage = document.getElementById('isMainImage').checked;
            const addButton = document.querySelector('#addImageModal .btn-primary');

            if (!fileInput.files || !fileInput.files[0]) {
                alert('Vui lòng chọn ảnh!');
                return;
            }

            // Hiển thị loading
            
            const originalText = addButton.innerHTML;
            addButton.innerHTML = '<span class="loading-spinner"></span> Đang thêm...';
            addButton.disabled = true;

            // Tạo FormData để upload file
            const formData = new FormData();
            formData.append('file', fileInput.files[0]);
            formData.append('sanPhamChiTietId', sanPhamChiTietId);
            formData.append('laAnhChinh', isMainImage);

            fetch('/Admin/AnhSanPham/UploadImage', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                    showNotification('Thêm ảnh thành công!', 'success');
                    
                   
                    $('#addImageModal').modal('hide');

                        updateProductImageDisplay(sanPhamChiTietId, data.urlAnh, isMainImage);
                } else {
                        showNotification('Lỗi: ' + (data.message || 'Không thể thêm ảnh'), 'error');
                }
            })
            .catch(error => {
               
                showNotification('Có lỗi xảy ra khi thêm ảnh: ' + error.message, 'error');
            })
            .finally(() => {
               
                addButton.innerHTML = originalText;
                addButton.disabled = false;
            });
        }

        // Hiển thị thông báo

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
           
            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                         <i class="${icon}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(notification);
            
            // Tự động ẩn sau 5 giây
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }

        // Đặt ảnh làm ảnh chính
        function setMainImage(imageId) {
            if (!confirm('Bạn có chắc muốn đặt ảnh này làm ảnh chính?')) {
                return;
            }

            fetch(`/Admin/AnhSanPham/SetMainImage?imageId=${imageId}`, {
                method: 'PUT'
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.text().then(text => {
                        try {
                            return JSON.parse(text);
                        } catch (e) {
                            console.error('Invalid JSON response:', text);
                            throw new Error('Server returned invalid JSON: ' + text.substring(0, 100));
                        }
                    });
                })
                .then(data => {
                    if (data.success) {
                        showNotification('Đã đặt ảnh làm ảnh chính!', 'success');
                        // Reload danh sách ảnh
                        const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
                        const sanPhamChiTietId = container.dataset.sanPhamChiTietId;

                        // Cập nhật giao diện chính - cần lấy URL của ảnh vừa đặt làm chính
                        // Tạm thời reload lại toàn bộ để đảm bảo hiển thị đúng
                        setTimeout(() => {
                            location.reload();
                        }, 1000);
                    } else {
                        showNotification('Lỗi: ' + (data.message || 'Không thể đặt ảnh chính'), 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Có lỗi xảy ra khi đặt ảnh chính: ' + error.message, 'error');
                });
        }

        // Xóa ảnh
        function deleteImage(imageId) {
            if (!confirm('Bạn có chắc muốn xóa ảnh này?')) {
                return;
            }

            fetch(`/Admin/AnhSanPham/DeleteImage?imageId=${imageId}`, {
                method: 'DELETE'
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.text().then(text => {
                        try {
                            return JSON.parse(text);
                        } catch (e) {
                            console.error('Invalid JSON response:', text);
                            throw new Error('Server returned invalid JSON: ' + text.substring(0, 100));
                        }
                    });
                })
                .then(data => {
                    if (data.success) {
                        showNotification('Đã xóa ảnh thành công!', 'success');
                        // Reload danh sách ảnh
                        const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
                        const sanPhamChiTietId = container.dataset.sanPhamChiTietId;

                        // Cập nhật giao diện chính nếu xóa ảnh chính
                        // Tạm thời reload lại toàn bộ để đảm bảo hiển thị đúng
                        setTimeout(() => {
                            location.reload();
                        }, 1000);
                    } else {
                        showNotification('Lỗi: ' + (data.message || 'Không thể xóa ảnh'), 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Có lỗi xảy ra khi xóa ảnh: ' + error.message, 'error');
                });
        }

        // Cập nhật hiển thị ảnh trong bảng chính
        function updateProductImageDisplay(sanPhamChiTietId, imageUrl, isMainImage) {
            // Tìm container ảnh sản phẩm trong bảng
            const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
            if (!container) {
                console.warn('Không tìm thấy container cho sanPhamChiTietId:', sanPhamChiTietId);
                return;
            }

            const previewDiv = container.querySelector('.images-preview');
            if (!previewDiv) {
                console.warn('Không tìm thấy preview div');
                return;
            }

            // Nếu là ảnh chính hoặc chưa có ảnh nào, cập nhật hiển thị
            if (isMainImage || previewDiv.querySelector('span.text-muted')) {
                previewDiv.innerHTML = `
                            <img src="${imageUrl}" class="img-thumbnail" style="max-width:50px;max-height:50px" alt="Ảnh chính" />
                        `;
            }
        }

        // Cập nhật hiển thị ảnh sau khi đặt ảnh chính
        function updateMainImageDisplay(sanPhamChiTietId, mainImageUrl) {
            const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
            if (!container) return;

            const previewDiv = container.querySelector('.images-preview');
            if (!previewDiv) return;

            if (mainImageUrl) {
                previewDiv.innerHTML = `
                            <img src="${mainImageUrl}" class="img-thumbnail" style="max-width:50px;max-height:50px" alt="Ảnh chính" />
                        `;
            } else {
                previewDiv.innerHTML = '<span class="text-muted small">Chưa có ảnh</span>';
            }
        }

    </script>
}
