@model IEnumerable<QuanView.Areas.Admin.Models.SanPhamDto>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-product-images.css" />
}

<h2 class="mb-4">Danh sách sản phẩm</h2>

<p>
    <a asp-area="Admin" asp-controller="SanPham" asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm mới</a>
</p>

<form asp-area="Admin" asp-controller="SanPham" asp-action="TaiBienThe" method="post">

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Không có sản phẩm nào được tìm thấy.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th><input type="checkbox" id="select-all" /></th>
                    <th>Ảnh</th>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Chất liệu</th>
                    <th>Danh mục</th>
                    <th>Thương hiệu</th>
                    <th>Loại ống</th>
                    <th>Kiểu dáng</th>
                    <th>Lưng quần</th>
                    <th>Xếp ly</th>
                    <th>Co giãn</th>
                    <th>Trạng thái</th>
                    <th style="width: 150px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedIds" value="@item.IDSanPham" class="select-checkbox" />
                        </td>
                        <td>
                            <img src="@(item.AnhChinh ?? "/img/default-product.jpg")" style="max-width:60px;max-height:60px" />
                        </td>
                        <td>@item.MaSanPham</td>
                        <td>@item.TenSanPham</td>
                        <td>@item.TenChatLieu</td>
                        <td>@item.TenDanhMuc</td>
                        <td>@item.TenThuongHieu</td>
                        <td>@item.TenLoaiOng</td>
                        <td>@item.TenKieuDang</td>
                        <td>@item.TenLungQuan</td>
                        <td>@(item.CoXepLy ? "Có" : "Không")</td>
                        <td>@(item.CoGian ? "Có" : "Không")</td>
                        <td>
                            <span class="badge @(item.TrangThai ? "bg-success" : "bg-secondary")">
                                @(item.TrangThai ? "Hoạt động" : "Ngưng")
                            </span>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="SanPham" asp-action="Edit" asp-route-id="@item.IDSanPham" class="btn btn-sm btn-primary me-1">Sửa</a>
                            <a asp-area="Admin" asp-controller="SanPham" asp-action="Delete" asp-route-id="@item.IDSanPham" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>

                    @if (item.ChiTietSanPhams != null && item.ChiTietSanPhams.Any())
                    {
                        <tr>
                            <td colspan="14" class="p-0">
                                <div class="table-responsive px-3 py-2">
                                    <table class="table table-sm table-bordered mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Kích cỡ</th>
                                                <th>Màu sắc</th>
                                                <th>Họa tiết</th>
                                                <th>Số lượng</th>
                                                <th>Giá bán</th>
                                                <th>Ảnh sản phẩm</th>
                                                <th>Thao tác ảnh</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ct in item.ChiTietSanPhams)
                                            {
                                                <tr>
                                                    <td>@ct.TenKichCo</td>
                                                    <td>@ct.TenMauSac</td>
                                                    <td>@ct.TenHoaTiet</td>
                                                    <td>@ct.SoLuong</td>
                                                    <td>
                                                        @if (ct.originalPrice > ct.price)
                                                        {
                                                            <span style="color:#888;text-decoration:line-through;font-size:0.95em;margin-right:6px">
                                                                @ct.originalPrice.ToString("N0") đ
                                                            </span>
                                                            <span style="color:#d32f2f;font-weight:bold;font-size:1.1em">
                                                                @ct.price.ToString("N0") đ
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span style="font-weight:bold">
                                                                @ct.price.ToString("N0") đ
                                                            </span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="product-images-container" data-sanchitiet-id="@ct.IdSanPhamChiTiet">
                                                            <div class="images-preview">
                                                                @if (!string.IsNullOrEmpty(ct.AnhDaiDien))
                                                                {
                                                                    <img src="@ct.AnhDaiDien" class="img-thumbnail" style="max-width:50px;max-height:50px" alt="Ảnh chính" />
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-muted small">Chưa có ảnh</span>
                                                                }
                                                            </div>
                                                            <div class="images-list" style="display:none;">
                                                                <!-- Danh sách ảnh sẽ được load bằng JavaScript -->
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                      @*   <button type="button" class="btn btn-sm btn-outline-info" 
                                                                onclick="loadImages('@ct.IdSanPhamChiTiet')">
                                                            <i class="fas fa-images"></i> Xem ảnh
                                                        </button> *@
                                                        <button type="button" class="btn btn-sm btn-outline-success" 
                                                                onclick="showAddImageModal('@ct.IdSanPhamChiTiet')">
                                                            <i class="fas fa-plus"></i> Thêm ảnh
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
</form>

<!-- Modal thêm ảnh -->
<div class="modal fade" id="addImageModal" tabindex="-1" aria-labelledby="addImageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addImageModalLabel">Thêm ảnh sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addImageForm" enctype="multipart/form-data">
                    <input type="hidden" id="sanPhamChiTietId" />
                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Chọn ảnh từ máy</label>
                        <input type="file" class="form-control" id="imageFile" accept="image/*" required onchange="previewImageFile()">
                        <div id="imagePreview" class="image-upload-preview" style="display:none;">
                            <img id="previewImg" src="" alt="Preview" style="max-width:100px;max-height:100px;">
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isMainImage">
                        <label class="form-check-label" for="isMainImage">Đặt làm ảnh chính</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="addImage()">Thêm ảnh</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('select-all')?.addEventListener('change', function () {
            var checked = this.checked;
            document.querySelectorAll('.select-checkbox').forEach(cb => cb.checked = checked);
        });

        // Hiển thị modal thêm ảnh
        function showAddImageModal(sanPhamChiTietId) {
            document.getElementById('sanPhamChiTietId').value = sanPhamChiTietId;
            document.getElementById('imageFile').value = ''; // Clear file input
            document.getElementById('isMainImage').checked = false;
            document.getElementById('imagePreview').style.display = 'none';
            
            const modalElement = document.getElementById('addImageModal');
            if (modalElement) {
                // Bootstrap 4
                $(modalElement).modal('show');
            }
        }

        // Preview ảnh khi chọn file
        function previewImageFile() {
            const fileInput = document.getElementById('imageFile');
            const previewDiv = document.getElementById('imagePreview');
            const previewImg = document.getElementById('previewImg');
            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    previewDiv.style.display = 'block';
                };
                reader.readAsDataURL(fileInput.files[0]);
            } else {
                previewDiv.style.display = 'none';
            }
        }

        // Thêm ảnh mới
        function addImage() {
            const sanPhamChiTietId = document.getElementById('sanPhamChiTietId').value;
            const fileInput = document.getElementById('imageFile');
            const isMainImage = document.getElementById('isMainImage').checked;
            const addButton = document.querySelector('#addImageModal .btn-primary');

            if (!fileInput.files || !fileInput.files[0]) {
                alert('Vui lòng chọn ảnh!');
                return;
            }

            // Hiển thị loading
            const originalText = addButton.innerHTML;
            addButton.innerHTML = '<span class="loading-spinner"></span> Đang thêm...';
            addButton.disabled = true;

            // Tạo FormData để upload file
            const formData = new FormData();
            formData.append('file', fileInput.files[0]);
            formData.append('sanPhamChiTietId', sanPhamChiTietId);
            formData.append('laAnhChinh', isMainImage);

            fetch('/Admin/AnhSanPham/UploadImage', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Thêm ảnh thành công!', 'success');
                    $('#addImageModal').modal('hide');
                    updateProductImageDisplay(sanPhamChiTietId, data.urlAnh, isMainImage);
                } else {
                    showNotification('Lỗi: ' + (data.message || 'Không thể thêm ảnh'), 'error');
                }
            })
            .catch(error => {
                showNotification('Có lỗi xảy ra khi thêm ảnh: ' + error.message, 'error');
            })
            .finally(() => {
                addButton.innerHTML = originalText;
                addButton.disabled = false;
            });
        }

        // Hiển thị thông báo
        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            
            const notification = document.createElement('div');
            notification.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <i class="${icon}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(notification);
            
            // Tự động ẩn sau 5 giây
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }

        // Đặt ảnh làm ảnh chính
        function setMainImage(imageId) {
            if (!confirm('Bạn có chắc muốn đặt ảnh này làm ảnh chính?')) {
                return;
            }

            fetch(`/Admin/AnhSanPham/SetMainImage?imageId=${imageId}`, {
                method: 'PUT'
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.text().then(text => {
                    try {
                        return JSON.parse(text);
                    } catch (e) {
                        console.error('Invalid JSON response:', text);
                        throw new Error('Server returned invalid JSON: ' + text.substring(0, 100));
                    }
                });
            })
            .then(data => {
                if (data.success) {
                    showNotification('Đã đặt ảnh làm ảnh chính!', 'success');
                    // Reload danh sách ảnh
                    const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
                    const sanPhamChiTietId = container.dataset.sanPhamChiTietId;
                    
                    // Cập nhật giao diện chính - cần lấy URL của ảnh vừa đặt làm chính
                    // Tạm thời reload lại toàn bộ để đảm bảo hiển thị đúng
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showNotification('Lỗi: ' + (data.message || 'Không thể đặt ảnh chính'), 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Có lỗi xảy ra khi đặt ảnh chính: ' + error.message, 'error');
            });
        }

        // Xóa ảnh
        function deleteImage(imageId) {
            if (!confirm('Bạn có chắc muốn xóa ảnh này?')) {
                return;
            }

            fetch(`/Admin/AnhSanPham/DeleteImage?imageId=${imageId}`, {
                method: 'DELETE'
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.text().then(text => {
                    try {
                        return JSON.parse(text);
                    } catch (e) {
                        console.error('Invalid JSON response:', text);
                        throw new Error('Server returned invalid JSON: ' + text.substring(0, 100));
                    }
                });
            })
            .then(data => {
                if (data.success) {
                    showNotification('Đã xóa ảnh thành công!', 'success');
                    // Reload danh sách ảnh
                    const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
                    const sanPhamChiTietId = container.dataset.sanPhamChiTietId;
                    
                    // Cập nhật giao diện chính nếu xóa ảnh chính
                    // Tạm thời reload lại toàn bộ để đảm bảo hiển thị đúng
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showNotification('Lỗi: ' + (data.message || 'Không thể xóa ảnh'), 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Có lỗi xảy ra khi xóa ảnh: ' + error.message, 'error');
            });
        }

        // Cập nhật hiển thị ảnh trong bảng chính
        function updateProductImageDisplay(sanPhamChiTietId, imageUrl, isMainImage) {
            // Tìm container ảnh sản phẩm trong bảng
            const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
            if (!container) {
                console.warn('Không tìm thấy container cho sanPhamChiTietId:', sanPhamChiTietId);
                return;
            }

            const previewDiv = container.querySelector('.images-preview');
            if (!previewDiv) {
                console.warn('Không tìm thấy preview div');
                return;
            }

            // Nếu là ảnh chính hoặc chưa có ảnh nào, cập nhật hiển thị
            if (isMainImage || previewDiv.querySelector('span.text-muted')) {
                previewDiv.innerHTML = `
                    <img src="${imageUrl}" class="img-thumbnail" style="max-width:50px;max-height:50px" alt="Ảnh chính" />
                `;
            }
        }

        // Cập nhật hiển thị ảnh sau khi đặt ảnh chính
        function updateMainImageDisplay(sanPhamChiTietId, mainImageUrl) {
            const container = document.querySelector(`[data-sanchitiet-id="${sanPhamChiTietId}"]`);
            if (!container) return;

            const previewDiv = container.querySelector('.images-preview');
            if (!previewDiv) return;

            if (mainImageUrl) {
                previewDiv.innerHTML = `
                    <img src="${mainImageUrl}" class="img-thumbnail" style="max-width:50px;max-height:50px" alt="Ảnh chính" />
                `;
            } else {
                previewDiv.innerHTML = '<span class="text-muted small">Chưa có ảnh</span>';
            }
        }
    </script>
}
