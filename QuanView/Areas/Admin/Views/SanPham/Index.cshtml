@model QuanView.ViewModels.SanPhamFilterViewModel
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-product-images.css" />
    <style>
        .filter-card {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
        }
        
        .pagination .page-link {
            color: #007bff;
            border-color: #dee2e6;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }
        
        .pagination .page-link:hover {
            color: #0056b3;
            background-color: #e9ecef;
            border-color: #dee2e6;
        }
        
        .result-info {
            background: #e9ecef;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
        }
        
        .filter-form .form-label {
            font-weight: 600;
            color: #495057;
        }
        
        .btn-filter {
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        
        .btn-filter:hover {
            background: linear-gradient(45deg, #0056b3, #004085);
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,123,255,0.3);
        }
    </style>
}

<h2 class="mb-4">Danh sách sản phẩm</h2>

<p>
    <a asp-area="Admin" asp-controller="SanPham" asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm mới</a>
</p>

<!-- Bộ lọc -->
<div class="card mb-4 filter-card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Bộ lọc sản phẩm</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-area="Admin" asp-controller="SanPham" asp-action="Index" class="row g-3 filter-form">
            <!-- Từ khóa tìm kiếm -->
            <div class="col-md-3">
                <label for="keyword" class="form-label">Tìm kiếm</label>
                <input type="text" class="form-control" id="keyword" name="keyword" value="@Model.Keyword" placeholder="Tên sản phẩm, mã sản phẩm...">
            </div>
            
            <!-- Trạng thái -->
            <div class="col-md-2">
                <label for="trangThai" class="form-label">Trạng thái</label>
                <select class="form-select" id="trangThai" name="trangThai">
                    @foreach (var option in Model.TrangThaiOptions)
                    {
                        <option value="@option.Value" selected="@(option.Value == Model.TrangThai)">@option.Text</option>
                    }
                </select>
            </div>
            
            <!-- Khoảng giá -->
            <div class="col-md-2">
                <label for="priceFrom" class="form-label">Giá từ</label>
                <input type="number" class="form-control" id="priceFrom" name="priceFrom" value="@Model.PriceFrom" placeholder="0" min="0">
            </div>
            
            <div class="col-md-2">
                <label for="priceTo" class="form-label">Giá đến</label>
                <input type="number" class="form-control" id="priceTo" name="priceTo" value="@Model.PriceTo" placeholder="999999999" min="0">
            </div>
            
            <!-- Khoảng số lượng -->
            <div class="col-md-1">
                <label for="qtyFrom" class="form-label">SL từ</label>
                <input type="number" class="form-control" id="qtyFrom" name="qtyFrom" value="@Model.QtyFrom" placeholder="0" min="0">
            </div>
            
            <div class="col-md-1">
                <label for="qtyTo" class="form-label">SL đến</label>
                <input type="number" class="form-control" id="qtyTo" name="qtyTo" value="@Model.QtyTo" placeholder="9999" min="0">
            </div>
            
            <!-- Khoảng ngày -->
            <div class="col-md-2">
                <label for="dateFrom" class="form-label">Ngày từ</label>
                <input type="date" class="form-control" id="dateFrom" name="dateFrom" value="@Model.DateFrom?.ToString("yyyy-MM-dd")">
            </div>
            
            <div class="col-md-2">
                <label for="dateTo" class="form-label">Ngày đến</label>
                <input type="date" class="form-control" id="dateTo" name="dateTo" value="@Model.DateTo?.ToString("yyyy-MM-dd")">
            </div>
            
            
            <!-- Nút tìm kiếm -->
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary me-2 btn-filter">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>
                <a asp-area="Admin" asp-controller="SanPham" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-refresh"></i> Làm mới
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Thông tin kết quả -->
