@model QuanApi.Dtos.KhachHangDto

@{
    ViewData["Title"] = "Chi tiết Khách Hàng";
    Layout = "_Layout";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
    }
</style>

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full bg-white p-8 rounded-xl shadow-lg space-y-6">
        <h1 class="text-3xl font-extrabold text-gray-900 text-center">Chi tiết Khách Hàng</h1>
        <p class="text-center text-gray-600">Thông tin chi tiết về khách hàng và các địa chỉ của họ.</p>

        <hr class="my-6 border-gray-200" />

        <div class="bg-gray-50 p-6 rounded-lg shadow-sm space-y-4">
            <h3 class="text-2xl font-semibold text-gray-800 mb-4">Thông tin Khách Hàng</h3>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.MaKhachHang)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Html.DisplayFor(model => model.MaKhachHang)</dd>

                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.TenKhachHang)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Html.DisplayFor(model => model.TenKhachHang)</dd>

                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Html.DisplayFor(model => model.Email)</dd>


                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.SoDienThoai)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Html.DisplayFor(model => model.SoDienThoai)</dd>

                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.NgayTao)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.NguoiTao)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Html.DisplayFor(model => model.NguoiTao)</dd>

                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.LanCapNhatCuoi)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Model.LanCapNhatCuoi?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.NguoiCapNhat)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">@Html.DisplayFor(model => model.NguoiCapNhat)</dd>

                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                    @if (Model.TrangThai)
                    {
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Kích hoạt</span>
                    }
                    else
                    {
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Ẩn</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="bg-gray-50 p-6 rounded-lg shadow-sm space-y-4">
            <h3 class="text-2xl font-semibold text-gray-800 mb-4">Địa Chỉ Khách Hàng</h3>
            @if (Model.DiaChis != null && Model.DiaChis.Any())
            {
                <div class="space-y-4">
                    @foreach (var diaChi in Model.DiaChis)
                    {
                        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
                            <h4 class="text-lg font-medium text-gray-800 mb-2">Địa chỉ: @Html.DisplayFor(modelItem => diaChi.MaDiaChi)</h4>
                            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-2 text-sm">
                                <dt class="text-gray-500">Địa chỉ chi tiết:</dt>
                                <dd class="text-gray-900">@Html.DisplayFor(modelItem => diaChi.DiaChiChiTiet)</dd>

                                <dt class="text-gray-500">Tên người nhận:</dt>
                                <dd class="text-gray-900">@(string.IsNullOrEmpty(diaChi.TenNguoiNhan) ? "Không có" : diaChi.TenNguoiNhan)</dd>

                                <dt class="text-gray-500">SĐT người nhận:</dt>
                                <dd class="text-gray-900">@(string.IsNullOrEmpty(diaChi.SdtNguoiNhan) ? "Không có" : diaChi.SdtNguoiNhan)</dd>

                                <dt class="text-gray-500">Là mặc định:</dt>
                                <dd class="text-gray-900">
                                    @if (diaChi.LaMacDinh)
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Có</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Không</span>
                                    }
                                </dd>

                                <dt class="text-gray-500">Trạng thái:</dt>
                                <dd class="text-gray-900">
                                    @if (diaChi.TrangThai)
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Ẩn</span>
                                    }
                                </dd>

                                <dt class="text-gray-500">Ngày tạo:</dt>
                                <dd class="text-gray-900">@diaChi.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="text-gray-500">Người tạo:</dt>
                                <dd class="text-gray-900">@(string.IsNullOrEmpty(diaChi.NguoiTao) ? "Hệ thống" : diaChi.NguoiTao)</dd>

                                <dt class="text-gray-500">Cập nhật cuối:</dt>
                                <dd class="text-gray-900">@(diaChi.LanCapNhatCuoi?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")</dd>

                                <dt class="text-gray-500">Người cập nhật:</dt>
                                <dd class="text-gray-900">@(string.IsNullOrEmpty(diaChi.NguoiCapNhat) ? "Chưa cập nhật" : diaChi.NguoiCapNhat)</dd>
                            </dl>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-gray-600">Khách hàng này chưa có địa chỉ nào.</p>
            }
        </div>

        <div class="mt-8 text-center space-x-4">
            <a asp-action="Edit" asp-route-id="@Model?.IDKhachHang" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition ease-in-out duration-150">
                Sửa
            </a>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition ease-in-out duration-150">
                Quay lại danh sách
            </a>
        </div>
    </div>
</div>