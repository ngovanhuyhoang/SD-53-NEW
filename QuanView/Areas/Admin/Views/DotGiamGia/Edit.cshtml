    @section Scripts {
        <script>
            function validateDiscountPercentage(input) {
                const value = parseFloat(input.value);

                if (value < 0) {
                    input.value = 0;
                    alert('Ph·∫ßn trƒÉm gi·∫£m gi√° kh√¥ng ƒë∆∞·ª£c √¢m!');
