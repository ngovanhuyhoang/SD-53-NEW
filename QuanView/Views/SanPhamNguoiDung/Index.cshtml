@model List<QuanApi.Dtos.SanPhamKhachHangViewModel>
@{
    ViewData["Title"] = "Sản phẩm";
    var page = ViewBag.Page ?? 1;
    var pageSize = ViewBag.PageSize ?? 9;
    var total = ViewBag.Total ?? 0;
    var priceFrom = Context.Request.Query["priceFrom"].ToString();
    var priceTo = Context.Request.Query["priceTo"].ToString();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .product-card {
        border-radius: 12px;
        border: 1px solid #eee;
        background: #fff;
        transition: box-shadow 0.2s;
        overflow: hidden;
        position: relative;
        height: 100%;
    }
    .product-card:hover {
        box-shadow: 0 4px 24px rgba(0,0,0,0.10);
        border-color: #ddd;
        z-index: 2;
    }
    .product-img {
        width: 100%;
        aspect-ratio: 1/1;
        object-fit: cover;
        background: #f8f8f8;
        border-bottom: 1px solid #eee;
    }
    .product-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .product-price {
        font-size: 1.1rem;
        font-weight: bold;
        color: #e74c3c;
    }
    .product-oldprice {
        text-decoration: line-through;
        color: #888;
        font-size: 0.95rem;
        margin-left: 8px;
    }
    .product-sale {
        position: absolute;
        top: 12px;
        left: 12px;
        background: #e74c3c;
        color: #fff;
        font-size: 0.85rem;
        font-weight: bold;
        padding: 2px 10px;
        border-radius: 8px;
        z-index: 3;
    }
    .product-card .btn {
        font-size: 0.95rem;
        border-radius: 8px;
    }
    .sidebar-section {
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
        border: 1px solid #eee;
    }
    .pagination .page-link {
        border-radius: 50% !important;
        margin: 0 2px;
        color: #333;
    }
    .pagination .active .page-link {
        background: #e74c3c;
        color: #fff;
        border: none;
    }
</style>

<div class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="sidebar-section">
                <h5 class="mb-3">Bộ lọc</h5>
                <form method="get" asp-action="Index" id="filterForm">
                    <input type="text" class="form-control mb-3" name="search" placeholder="Tìm kiếm sản phẩm..." value="@Context.Request.Query["search"]" />
                    <div class="mb-3">
                        <label class="form-label">Giá từ</label>
                        <input type="number" class="form-control" name="priceFrom" min="0" placeholder="Từ..." value="@priceFrom">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Đến</label>
                        <input type="number" class="form-control" name="priceTo" min="0" placeholder="Đến..." value="@priceTo">
                    </div>
                   
                    <button type="submit" class="btn btn-outline-primary w-100">Lọc</button>
                </form>
            </div>
        </div>
        <!-- Product Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span>Hiển thị <b>@Model.Count</b> sản phẩm</span>
                <form method="get" class="mb-0" id="sortForm">
                    <input type="hidden" name="search" value="@Context.Request.Query["search"]" />
                    <input type="hidden" name="priceFrom" value="@priceFrom" />
                    <input type="hidden" name="priceTo" value="@priceTo" />
                    <select class="form-select w-auto" name="sortOrder" onchange="document.getElementById('sortForm').submit()">
                        <option value="asc" @(Context.Request.Query["sortOrder"]=="asc" ? "selected" : "")>Sắp xếp theo giá tăng dần</option>
                        <option value="desc" @(Context.Request.Query["sortOrder"]=="desc" ? "selected" : "")>Sắp xếp theo giá giảm dần</option>
                    </select>
                </form>
            </div>
            <div class="row g-4">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var sp = Model[i];
                    var bienTheSale = sp.BienThes.FirstOrDefault(b => b.GiaSauGiam < b.GiaGoc);
                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="product-card h-100 d-flex flex-column">
                            @if (bienTheSale != null)
                            {
                                <span class="product-sale">SALE</span>
                            }
                            <img src="@sp.UrlAnh" class="product-img" alt="@sp.TenSanPham" />
                            <div class="p-3 flex-grow-1 d-flex flex-column">
                                <div class="product-title">@sp.TenSanPham</div>
                                <div class="text-muted mb-1" style="font-size:0.95rem;">@sp.DanhMuc</div>
                                <div>
                                    @if (bienTheSale != null)
                                    {
                                        <span class="product-price">@bienTheSale.GiaSauGiam.ToString("N0") ₫</span>
                                        <span class="product-oldprice">@bienTheSale.GiaGoc.ToString("N0") ₫</span>
                                    }
                                    else
                                    {
                                        <span class="product-price">@sp.BienThes.First().GiaGoc.ToString("N0") ₫</span>
                                    }
                                </div>
                                @if (sp.BienThes != null && sp.BienThes.Any())
                                {
                                    <a class="btn btn-outline-danger btn-sm mt-3 w-100"
                                       href="/SanPhamNguoiDung/Detail/@sp.BienThes.First().IDSanPhamChiTiet">
                                        Xem chi tiết
                                    </a>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold mt-3">Không có biến thể</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Pagination -->
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Math.Ceiling((double)total / pageSize); i++)
                    {
                        <li class="page-item @(i == (int)page ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
<script>
</script>
}